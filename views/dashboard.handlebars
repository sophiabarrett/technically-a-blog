<div class="row mb-3 justify-content-between">
  <div class="col">
    <h3>My Posts:</h3>
  </div>
  <div class="col text-end">
    <a href="/dashboard/add-post" class="btn btn-lg btn-success">Add Post</a>
  </div>
</div>

{{#if posts.length}}
<ul class="list-group list-group-flush">
  {{#each posts as |post|}}
    <li class="list-group-item py-3 px-4">
      <h4>
        <a href="/post/{{post.id}}">{{post.title}} </a> (<a href="/dashboard/edit-post/{{post.id}}">edit</a>)
      </h4>
      <p class="p-0 m-0">Posted by
        {{post.user.username}}
        on
        {{post.createdAt}}
        |
        {{post.comments.length}} {{format_plural "comment" post.comments.length}}
        </p>
    </li>
  {{/each}}
</ul>
{{else}}
<p>You haven't published anything yet!</p>
{{/if}}

